<!DOCTYPE html>
<html>
  <head>
    <title>Travel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% unless request.fullpath.include?('show') %>
   <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   <% end %>

    	<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>

      <!-- drawer.css -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.2/css/drawer.min.css">

      <!-- jquery & iScroll -->
        <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script> -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.2.0/iscroll.min.js"></script>



     <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

     	  <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

        <!-- drawer.js -->
          <script src="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.2/js/drawer.min.js"></script>



  </head>

<body class="drawer drawer--left">
  <header role="banner">
    <button type="button" class="drawer-toggle drawer-hamburger" style= "background-color: white;">
      <span class="sr-only">toggle navigation</span>
      <span class="drawer-hamburger-icon"></span>
    </button>

    <nav class="drawer-nav" role="navigation" style= "background-image: url(<%= image_url('TABIHAMA4.png') %>">>
      <ul class="drawer-menu">
        <li class="drawer-title">TABIHAMA</li>

        <!-- <li class="drawer-home"><%#= link_to 'Home', about_path, class: "drawer-home2", data: {"turbolinks" => false} %></li> -->

        <li class="drawer-home"><%= link_to 'Home', about_top_path, class: "drawer-home2", data: {"turbolinks" => false} %></li>

        <li class="drawer-about"><%= link_to 'About', about_path, class: "drawer-about2", data: {"turbolinks" => false} %></li>

        <%if admin_user_signed_in? %>
             <li class="Drawer-Post-New"><%= link_to '新規投稿', new_post_path, class: "Drawer-Post-New2", data: {"turbolinks" => false} %></li>
        <% end %>

        <li class="drawer-posts"><%= link_to '投稿一覧', posts_path, class: "drawer-posts2", data: {"turbolinks" => false} %></li>

        <% if end_user_signed_in? %>
          <li class="drawer-index"><%= link_to 'お問い合わせ', index_path, class: "drawer-index2", data: {"turbolinks" => false} %></li>
        <% end %>

        <% if end_user_signed_in? %>
            <li class="drawer-mypage"><%= link_to 'マイページ', end_user_path(current_end_user.id), class: "drawer-mypage2", data: {"turbolinks" => false} %></li>
            <li class="drawer-log-out"><%= link_to 'ログアウト', destroy_end_user_session_path, class: "drawer-log-out2", data: {"turbolinks" => false}, method: :delete %></li>
         <% else %>
            <li class="drawer-sign-up"><%= link_to '新規登録',  new_end_user_registration_path, class: "drawer-sign-up2", data: {"turbolinks" => false} %></li>
            <li class="drawer-log-in"><%= link_to 'ログイン', end_user_session_path, class: "drawer-log-in2", data: {"turbolinks" => false} %></li>
        <% end %>

        <% if admin_user_signed_in? %>
            <li class="drawer-log-out"><%= link_to 'ログアウト', destroy_admin_user_session_path, class: "drawer-log-out2", data: {"turbolinks" => false}, method: :delete %></li>
         <% else %>
            <li class="drawer-log-in"><%= link_to '管理者ログイン', admin_user_session_path, class: "drawer-log-in2", data: {"turbolinks" => false} %></li>
        <% end %>

      </ul>
    </nav>
  </header>

  <main role="main">

  </main>
</body>


    <%= yield %>
</html>
